{
    "name": "jimchen/laravel-macro",
    "description": "Laravel Macro Helper",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "JimChen",
            "email": "18219111672@163.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "JimChen\\Macro\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.0",
        "laravel/framework": "~5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.5"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "JimChen\\Macro\\LaravelMacroServiceProvider"
            ]
        }
    }
}
